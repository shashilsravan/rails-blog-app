<% provide(:title, "Log in") %>
<div class="my-5 py-5 d-flex flex-column justify-content-center align-items-center bg-light">
    <h2> Login </h2>
    <%= form_with(url: login_path, scope: :sesssion, local: true) do |form| %>

        <div class="field">
            <%= form.label :email, class: "form-label" %>
            <%= form.email_field :email, class: "form-control", 
                placeholder: "johndoe@mail.xyz" %>
        </div>

        <div class="field">
            <%= form.label :password, class: "form-label" %>
            <%= form.password_field :password, class: "form-control" %>
        </div>

        <div class="form-check d-flex align-items-center mb-3">
            <%= form.check_box :remember_me, class: "form-check-input" %>
            <%= form.label :remember_me, class: "form-check-label mx-2" %>
        </div>

        <div class="actions">
            <%= form.submit "Log in", class: "btn btn-success" %>
        </div>
    <% end %>
    <p class="my-2"> New user? <%= link_to 'Sign up here', signup_path %> </p>
    <p class="my-2"> Forgot password? <%= link_to 'Click here', new_password_reset_path %> </p>
    <%= link_to 'Back', users_path, class: "my-2" %>
</div>